<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVehicleActivity">

    <Toolbar
        android:id="@+id/add_vehicle_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Vehicle"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/add_vehicle_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/close_btn"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="12dp"
                />

        </RelativeLayout>
    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/add_vehicle_toolbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/add_vehicle_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_vehicle_toolbar"
                android:text="Vehicle Info"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_vehicle_model"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:hint="Model"
                    app:hintAnimationEnabled="true"
                    app:boxBackgroundMode="outline"
                    android:layout_below="@id/add_vehicle_info"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:endIconMode="clear_text"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/add_vehicle_model_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"/>
                </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/add_vehicle_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_vehicle_toolbar"
                android:text="Condition"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                />
            <RadioGroup
                android:id="@+id/radio_vehicle_condition_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/add_vehicle_condition"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                >


                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_vehicle_condition_brand_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Brand New" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_vehicle_condition_reconditioned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Re-Conditioned"
                    android:layout_marginLeft="10dp"
                    />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_vehicle_condition_antique"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Antique"
                    android:layout_marginLeft="10dp"
                    />

            </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_vehicle_category"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="Category"
                    app:hintAnimationEnabled="true"
                    app:boxBackgroundMode="outline"
                    android:layout_below="@id/add_vehicle_condition"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:endIconMode="dropdown_menu"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    >
                    <AutoCompleteTextView
                        android:id="@+id/add_vehicle_category_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:focusableInTouchMode="true"
                        android:focusable="false"
                        android:cursorVisible="false"/>

                </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/add_vehicle_year_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add_vehicle_category"
                    android:text="Year"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="22dp"
                    />

                <NumberPicker
                    android:id="@+id/add_vehicle_year_picker"
                    android:layout_height="100dp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="60dp"
                    >
                </NumberPicker>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_vehicle_year"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:hint="Year"
                    app:hintAnimationEnabled="true"
                    app:boxBackgroundMode="outline"
                    android:layout_below="@id/add_vehicle_year_picker"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:endIconMode="clear_text"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_vehicle_year_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_vehicle_manufacturer"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="Manufacturer"
                    app:hintAnimationEnabled="true"
                    app:boxBackgroundMode="outline"
                    android:layout_below="@id/add_vehicle_year"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:endIconMode="dropdown_menu"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    >
                    <AutoCompleteTextView
                        android:id="@+id/add_vehicle_manufacturer_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:focusableInTouchMode="true"
                        android:focusable="false"
                        android:cursorVisible="false"/>

                </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/add_vehicle_transmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_vehicle_category"
                android:text="Transmission"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                />

            <RadioGroup
                android:id="@+id/vehicle_transmission_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/add_vehicle_condition"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                >


                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_vehicle_transmission_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Auto" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_vehicle_transmission_manual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manual"
                    android:layout_marginLeft="45dp"
                    />

            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_vehicle_price"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:hint="Price"
                app:hintAnimationEnabled="true"
                app:boxBackgroundMode="outline"
                android:layout_below="@id/radio_vehicle_transmission_manual"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:endIconMode="clear_text"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_vehicle_price_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_vehicle_more"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:hint="More Info"
                    app:hintAnimationEnabled="true"
                    app:boxBackgroundMode="outline"
                    android:layout_below="@id/add_vehicle_transmission"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:endIconMode="clear_text"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_vehicle_more_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/add_attach_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add_vehicle_more"
                    android:text="Attach Images "
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="12dp"
                    />

                <ImageView
                    android:id="@+id/add_vehicle_img1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#F5F5F5"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/add_attach_images"
                    android:src="@drawable/ic_image"/>

                <ImageView
                    android:id="@+id/add_vehicle_img2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#F5F5F5"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/add_vehicle_img1"
                    android:src="@drawable/ic_image"/>

                <ImageView
                    android:id="@+id/add_vehicle_img3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#F5F5F5"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/add_vehicle_img2"
                    android:src="@drawable/ic_image"/>

                <TextView
                    android:id="@+id/add_vehicle_contact_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add_vehicle_img3"
                    android:text="Contact Info"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_vehicle_contact_name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:hint="Name"
                app:hintAnimationEnabled="true"
                app:boxBackgroundMode="outline"
                android:layout_below="@id/add_vehicle_contact_info"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:endIconMode="clear_text"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_vehicle_contact_name_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_vehicle_contact_number"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:hint="Number"
                app:hintAnimationEnabled="true"
                app:boxBackgroundMode="outline"
                android:layout_below="@id/add_vehicle_contact_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:endIconMode="clear_text"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_vehicle_contact_number_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_vehicle_contact_location"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:hint="Location"
                app:hintAnimationEnabled="true"
                app:boxBackgroundMode="outline"
                android:layout_below="@id/add_vehicle_contact_number"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:endIconMode="clear_text"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_vehicle_contact_location_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/add_vehicle_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:padding="12dp"
                android:text="Add Vehicle"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
