<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehicleListActivity">


    <Toolbar
        android:id="@+id/ss_vehicle_parts_list_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        >

    </Toolbar>

    <HorizontalScrollView
        android:id="@+id/option_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/ss_options"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <SearchView
        android:id="@+id/ss_vehicle_list_search_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/ss_vehicle_parts_list_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_design" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ss_vehicle_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ss_vehicle_list_search_view"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ss_vehicles_list_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/close_btn"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Vehicles"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>